# Volume.
XF86Audio{RaiseVolume,LowerVolume}
    pactl set-sink-volume @DEFAULT_SINK@ {+,-}5%; pkill -RTMIN+14 dwmblocks

XF86AudioMute
    pactl set-sink-mute @DEFAULT_SINK@ toggle; pkill -RTMIN+14 dwmblocks

# Music control.
XF86Audio{Prev,Next}
	radio stop;mpc -q {prev,next};  kill -RTMIN+15 dwmblocks

XF86AudioPlay
    radio stop;mpc toggle ;pkill -RTMIN+15 dwmblocks

control + XF86AudioPlay
    radio stop;toggle_playlist;pkill -RTMIN+15 dwmblocks

shift + XF86Audio{RaiseVolume,LowerVolume}
	radio stop;mpc -q {next,prev};pkill -RTMIN+15 dwmblocks

shift + XF86AudioMute
    radio stop;mpc toggle;pkill -RTMIN+15 dwmblocks

control + shift + XF86AudioMute
    radio stop;toggle_playlist; pkill -RTMIN+15 dwmblocks

# Radio control.
shift + XF86Audio{Prev,Next}
	radio {prev,next}; pkill -RTMIN+16 dwmblocks

shift + XF86AudioPlay
    radio toggle; pkill -RTMIN+16 dwmblocks

super + XF86Audio{RaiseVolume,LowerVolume}
	radio {next,prev}; pkill -RTMIN+16 dwmblocks

super + XF86AudioMute
    radio toggle; pkill -RTMIN+16 dwmblocks

# Brightness control.
XF86MonBrightness{Up,Down}
    brightnessctl s {+5%,5%-}; pkill -RTMIN+12 dwmblocks

# Programms.
super + shift + {t, b, z, p, l, c, r, n, y}
    {telegram-desktop, $BROWSER, zathura, passmenu, librewolf, slock loginctl suspend, $TERMINAL -e ranger, obsidian, freetube}


# Scripts.
super + shift + {e, x, s, u, o, h}
    {dmenu_configs, dmenu_powermenu, dmenu_search, file_upload, open -b, st -e htop}

super + Tab
    flameshot gui -c -p ~/Media/Photo/Screenshots

super + control + r 
    record start

super + shift + control + r 
    record stop
